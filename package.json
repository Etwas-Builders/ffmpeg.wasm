{
  "name": "@modfy/ffmpeg",
  "version": "0.1.2-f",
  "description": "FFmpeg WebAssembly version",
  "main": "src/index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "start": "node scripts/server.js",
    "build": "rimraf dist && webpack --config scripts/webpack.config.prod.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint src",
    "wait": "rimraf dist && wait-on http://localhost:3000/dist/ffmpeg.dev.js",
    "test": "npm-run-all -p -r start test:all",
    "test:all": "npm-run-all wait test:browser:ffmpeg",
    "test:browser": "mocha-headless-chrome -a allow-file-access-from-files -a incognito -a no-sandbox -a disable-setuid-sandbox -a disable-logging -t 300000",
    "test:browser:ffmpeg": "npm run test:browser -- -f ./tests/ffmpeg.test.html"
  },
  "keywords": [
    "ffmpeg",
    "WebAssembly",
    "video"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=12.16.1"
  },
  "dependencies": {
    "is-electron": "^2.2.0",
    "regenerator-runtime": "^0.13.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-loader": "^8.1.0",
    "cors": "^2.8.5",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "expect.js": "^0.3.1",
    "express": "^4.17.1",
    "mocha": "^5.2.0",
    "mocha-headless-chrome": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "wait-on": "^3.3.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2"
  }
}
